@model Incident
@{ ViewData["Title"] = "Add a new incident"; 

}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<form asp-action="Edit" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CustomerId">Customer</label>
        <select asp-for="CustomerId" class="form-control">
            @foreach (Customer c in ViewBag.Customers)
            {
<option value="@c.CustomerId">@c.FullName</option>            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ProductId">Product</label>
        <select asp-for="ProductId" class="form-control">
            @foreach (Product p in ViewBag.Products)
            {
<option value="@p.ProductId">@p.Name</option>            }
        </select>
        <hr />
    </div>
    <div class="form-group">
        <label asp-for="TechnicianId">Technician</label>
        <select asp-for="TechnicianId" class="form-control">
            @foreach (Technician t in ViewBag.Technicians)
            {
<option value="@t.TechnicianId">@t.Name</option>            }
        </select>
        <hr />
    </div>

    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control">
        <hr />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control">
        <hr />
    </div>

    <div class="form-group">
        <label asp-for="DateOpened">Date Opened</label>
        <input asp-for="DateOpened" type="datetime-local" id="date">
        <hr />
    </div>

    <div class="form-group">
        <label asp-for="DateClosed">Date Closed</label>
        <input asp-for="DateClosed" type="datetime-local" id="date">
        <hr />
    </div>
    <input type="hidden" asp-for="IncidentId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <button type="submit" class="btn btn-warning" asp-controller="Incident" asp-action="List">Cancel</button>
</form>
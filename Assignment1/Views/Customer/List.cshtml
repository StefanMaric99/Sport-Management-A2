@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Customer Manager";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>City</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (Customer customer in Model)
        {
        <tr>
            <td>@customer.FullName</td>
            <td>@customer.Email</td>
            <td>@customer.City</td>
            <td><a class="btn btn-primary" asp-controller="Customer" asp-action="Edit"  asp-route-id="@customer.CustomerId">Edit</a></td>
            <td><a class="btn btn-danger" asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.CustomerId">Delete</a></td>
        </tr>
        }
        
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Customer" asp-action="Add">Add Customer</a>
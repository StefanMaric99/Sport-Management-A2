@{
}
@model GetTechViewModel
@{
    ViewData["Title"] = "Select Technician";
}

<h2 class="h">@ViewData["Title"]</h2>

<form method="post" asp-action="List" asp-controller="TechIncident">
    <div class="input-group">
        <select class="form-control" asp-for="TechnicianId" asp-items="@Model.Technicians">
            <option value="-1">Select Technician</option>
        </select>
    </div>
    <div class="input-group">
        <input type="hidden" name="id" value="@Model.TechnicianId" />
        <button class="btn btn-primary float-left">Confirm</button>
        <button type="submit" class="btn btn-danger float-right" asp-controller="Home" asp-action="Index">Cancel</button>
    </div>
</form>
